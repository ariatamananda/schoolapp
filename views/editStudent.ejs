<%- include('partials/header') %> 
    <%- include('partials/navigation') %> 
    <h1>Edit Students Data</h1>
    <form action="/students/<%= data.id %>/edit" method="POST">
        <div>
            <label for="">First Name</label>
            <input type="text" name="first_name" value=<%= data.first_name %>><br><br>
        </div>
        <div>
            <label for="">Last Name</label>
            <input type="text" name="last_name" value=<%= data.last_name %>><br><br>
        </div>
        <div>
            <label for="">Email</label>
            <input type="email" name="email" value=<%= data.email %>><br><br>
        </div>
        <div>
            <label for="">Gender</label>
            <label><input type="radio" name="gender" value="male" <%= data.gender === "male" ? 'checked' : '' %> >Male</label>
            <label><input type="radio" name="gender" value="female" <%= data.gender === "female" ? 'checked' : '' %> >Female</label>
        </div>
        <br>
        <div>
            <label for="">Birth Date</label>
            <input type="date" name="birth_date" value=<%= data.birth_date %>><br><br>
        </div>

        <button type="submit">Edit Data</button>
    </form>
<%- include('partials/footer') %> 